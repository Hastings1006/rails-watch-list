
<div class="container">
  <h1><%= @list.name %></h1>
  <%@list.bookmarks.each do |bookmark| %>
    <div class="card">
      <h2><%= bookmark.movie.title %></h2>
      <img src=<%=bookmark.movie.poster_url%> alt="movie poster" height=400 width=300>
      <p><%=bookmark.movie.overview%></p>
      <p><%=bookmark.movie.rating%></p>
      <%= link_to "delete", bookmark_path(bookmark), data: { turbo_method: 'delete', turbo_confirm: "Are you sure?"}%>
    </div>
  <%end%>
  <%= link_to "back", root_path%>
  <%= link_to "add bookmark to list", new_list_bookmark_path(@list) %>
</div>
